<%- include('partials/header', {
  titulo: 'RCAs',
  subtitulo: 'Cadastro de Representantes Comerciais',
  user: locals.user
}) %>

<div class="card">
  <h2>‚ûï Cadastrar Novo RCA</h2>
  <form action="/rcas" method="POST">
    <div class="form-row">
      <div class="form-group">
        <label for="nome">Nome *</label>
        <input type="text" id="nome" name="nome" required>
      </div>
      <div class="form-group">
        <label for="cpf">CPF</label>
        <input type="text" id="cpf" name="cpf">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group">
        <label for="praca">Pra√ßa (Cidade/Regi√£o)</label>
        <input type="text" id="praca" name="praca">
      </div>
       <div class="form-group">
        <label for="cep">CEP</label>
        <input type="text" id="cep" name="cep">
      </div>
    </div>
    <div class="form-group">
      <label for="endereco">Endere√ßo</label>
      <input type="text" id="endereco" name="endereco">
    </div>
     <div class="form-row">
        <div class="form-group">
            <label for="telefone">Telefone</label>
            <input type="text" id="telefone" name="telefone">
        </div>
        <div class="form-group">
            <label for="email">E-mail</label>
            <input type="email" id="email" name="email">
        </div>
    </div>
    <div class="form-group">
      <label for="observacao">Observa√ß√µes</label>
      <textarea id="observacao" name="observacao" rows="3"></textarea>
    </div>
    <button type="submit" class="btn">Cadastrar RCA</button>
  </form>
</div>

<div class="card">
  <h2>üìã RCAs Cadastrados</h2>
  <table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Pra√ßa</th>
      <th>CPF</th>
      <th>Telefone</th>
      <th>E-mail</th>
      <th>A√ß√µes</th> </tr>
  </thead>
  <tbody>
    <% rcas.forEach(rca => { %>
      <tr>
        <td><strong><%= rca.nome %></strong></td>
        <td><%= rca.praca || '-' %></td>
        <td><%= rca.cpf || '-' %></td>
        <td><%= rca.telefone || '-' %></td>
        <td><%= rca.email || '-' %></td>
        <td> <form action="/rcas/delete/<%= rca.id %>" method="POST" onsubmit="return confirm('Tem certeza que deseja excluir este RCA?');">
            <button type="submit" class="btn btn-danger" style="padding: 5px 10px; font-size: 12px;">Excluir</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
</div>

<%- include('partials/footer') %>