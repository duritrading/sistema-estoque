<div class="card">
  <h2>ðŸ“ˆ DRE - <%= ano %></h2>
  <div style="overflow-x: auto;">
    <table class="table mt-2">
      <thead>
        <tr>
          <th>Categoria</th>
          <% meses.forEach(mes => { %>
            <th class="text-right"><%= mes %></th>
          <% }) %>
          <th class="text-right">Total Ano</th>
        </tr>
      </thead>
      <tbody>
        <% relatorio.forEach(linha => { %>
          <% const totalLinha = linha.valores.reduce((a, b) => a + b, 0); %>

          <tr class="<%= linha.classes %>">
            <td>
              <span class="<%= linha.isSubItem ? 'dre-sub-item' : '' %>">
                <%= linha.nome %>
              </span>
            </td>

            <% linha.valores.forEach(valor => { %>
              <td class="text-right <%= valor < 0 ? 'saldo-negativo' : '' %>">
                <%= valor !== 0 ? `R$ ${valor.toLocaleString('pt-BR', {minimumFractionDigits: 2})}` : '-' %>
              </td>
            <% }) %>

            <td class="text-right <%= totalLinha < 0 ? 'saldo-negativo' : '' %>">
              <strong><%= totalLinha !== 0 ? `R$ ${totalLinha.toLocaleString('pt-BR', {minimumFractionDigits: 2})}` : '-' %></strong>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

