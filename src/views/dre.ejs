<%- include('partials/header', {
  titulo: 'DRE - Demonstrativo de Resultado',
  subtitulo: `VisÃ£o geral para o ano de ${ano}`,
  user: locals.user
}) %>

<div class="card">
  <h2>ðŸ“ˆ DRE Gerencial - <%= ano %></h2>
  <div style="overflow-x: auto;">
    <table class="table mt-2">
      <thead>
        <tr>
          <th>DescriÃ§Ã£o</th>
          <% meses.forEach(mes => { %>
            <th class="text-right"><%= mes %></th>
          <% }) %>
          <th class="text-right">Total Ano</th>
        </tr>
      </thead>
      <tbody>
        <% estrutura.forEach(linha => { %>
          <% const valores = resultados[linha.label] || Array(12).fill(0); %>
          <% const totalLinha = valores.reduce((a, b) => a + b, 0); %>
          <tr class="<%= linha.css %> <%= linha.tipo === 'header' ? 'dre-header-row' : '' %>">
            <td>
              <span class="<%= linha.tipo === 'item' ? 'dre-sub-item' : '' %>">
                <%= linha.label %>
              </span>
            </td>

            <% valores.forEach(valor => { %>
              <td class="text-right <%= valor < 0 ? 'saldo-negativo' : '' %>">
                <%= valor !== 0 ? `R$ ${valor.toLocaleString('pt-BR', {minimumFractionDigits: 2})}` : '-' %>
              </td>
            <% }) %>

            <td class="text-right <%= totalLinha < 0 ? 'saldo-negativo' : '' %>">
                <% if (linha.tipo === 'total' || linha.tipo === 'header') { %>
                <strong><%= totalLinha !== 0 ? `R$ ${totalLinha.toLocaleString('pt-BR', {minimumFractionDigits: 2})}` : '-' %></strong>
              <% } else { %>
                <%= totalLinha !== 0 ? `R$ ${totalLinha.toLocaleString('pt-BR', {minimumFractionDigits: 2})}` : '-' %>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('partials/footer') %>