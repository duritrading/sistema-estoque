<%- include('partials/header', {
  titulo: 'Controle de Faturamento',
  subtitulo: 'Acompanhamento de contas a receber e inadimpl√™ncia',
  user: locals.user
}) %>

<div class="card">
  <h2>üìä Relat√≥rio de Contas a Receber</h2>
  <p>Abaixo est√£o todas as parcelas de vendas registradas no sistema.</p>
  
  <form method="GET" action="/faturamento" class="filter-section">
    <div class="form-row">
      <div class="form-group">
        <label for="data_inicio">De:</label>
        <input type="date" name="data_inicio" id="data_inicio" class="form-control" value="<%= locals.filtros ? filtros.data_inicio : '' %>">
      </div>
      <div class="form-group">
        <label for="data_fim">At√©:</label>
        <input type="date" name="data_fim" id="data_fim" class="form-control" value="<%= locals.filtros ? filtros.data_fim : '' %>">
      </div>
      <div class="form-group" style="align-self: flex-end;">
        <button type="submit" class="btn">Filtrar</button>
      </div>
    </div>
  </form>

  <div style="overflow-x: auto;">
    <table class="table mt-2">
      <thead>
        <tr>
          <th>Cliente</th>
          <th>Produto</th>
          <th>Vencimento</th>
          <th>Parcela</th>
          <th class="text-right">Valor</th>
          <th>Status</th>
          <th>A√ß√µes</th>
        </tr>
      </thead>
      <tbody>
        <% if (contas && contas.length > 0) { %>
          <% contas.forEach(conta => { %>
            <tr>
              <td><%= conta.cliente_nome %></td>
              <td><%= conta.produto_descricao %></td>
              <td><%= new Date(conta.data_vencimento).toLocaleDateString('pt-BR', { timeZone: 'UTC' }) %></td>
              <td><%= conta.numero_parcela %> / <%= conta.total_parcelas %></td>
              <td class="text-right">R$ <%= parseFloat(conta.valor).toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %></td>
              <td>
                <% if (conta.status === 'Pago') { %>
                  <span class="badge badge-success">Pago</span>
                <% } else if (new Date(conta.data_vencimento) < new Date() && conta.status !== 'Pago') { %>
                  <span class="badge badge-danger">Atrasado</span>
                <% } else { %>
                  <span class="badge badge-warning">Pendente</span>
                <% } %>
              </td>
              <td>
                <% if (conta.status !== 'Pago') { %>
                  <form action="/faturamento/registrar-pagamento/<%= conta.id %>" method="POST" onsubmit="return confirm('Confirma o recebimento desta parcela?');">
                    <button type="submit" class="btn btn-success" style="padding: 5px 10px; font-size: 12px;">Registrar Pagamento</button>
                  </form>
                <% } else { %>
                  -
                <% } %>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7" class="text-center">Nenhuma conta a receber encontrada para o per√≠odo selecionado.</td>
          </tr>
        <% } %>
      </tbody>
      <tfoot>
        <tr style="font-weight: bold; background-color: #f8f9fa;">
            <td colspan="4" class="text-right">Total do Per√≠odo:</td>
            <td class="text-right">R$ <%= (totalValor || 0).toLocaleString('pt-BR', {minimumFractionDigits: 2}) %></td>
            <td colspan="2"></td>
        </tr>
        <tr style="font-weight: bold; background-color: #fff3cd;">
            <td colspan="4" class="text-right">Total Pendente no Per√≠odo:</td>
            <td class="text-right">R$ <%= (totalPendente || 0).toLocaleString('pt-BR', {minimumFractionDigits: 2}) %></td>
            <td colspan="2"></td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>

<%- include('partials/footer') %>