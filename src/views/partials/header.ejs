/* Navegação principal */
.main-nav {
  display: flex;
  gap: 1rem;
  align-items: center;
}

/* Links simples */
.nav-link {
  color: #fff;
  text-decoration: none;
  padding: .5rem .75rem;
}
.nav-link:hover {
  color: var(--of-secondary);
}

/* Dropdown container */
.dropdown {
  position: relative;
}
.dropdown-toggle {
  background: none;
  border: none;
  color: #fff;
  cursor: pointer;
  padding: .5rem .75rem;
}
.dropdown-toggle:hover {
  color: var(--of-secondary);
}

/* Dropdown menu */
.dropdown-menu {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  background: #fff;
  border: 1px solid var(--of-primary);
  border-radius: 4px;
  margin-top: .25rem;
  min-width: 10rem;
  z-index: 100;
}
.dropdown-item {
  display: block;
  padding: .5rem 1rem;
  color: var(--of-primary);
  text-decoration: none;
}
.dropdown-item:hover {
  background: var(--of-accent);
}

/* Mostrar menu on hover */
.dropdown:hover .dropdown-menu {
  display: block;
}
