<header class="header">
  <div class="header-content">
    <!-- Marca e logo -->
    <div class="brand">
      <a href="/" class="brand-link">
        <img src="/logo-of.png" alt="OF Distribuidora" class="logo-header">
        <span class="brand-text">Sistema OF Distribuidora</span>
      </a>
    </div>

    <% if (locals.user) { %>
    <!-- Navegação principal com dropdowns -->
    <nav class="main-nav">
      <ul class="nav-list">
        <!-- Dashboard -->
        <li class="nav-item">
          <a href="/" class="nav-link">Dashboard</a>
        </li>

        <!-- Movimentações -->
        <li class="nav-item dropdown">
          <button type="button" class="dropdown-toggle">Movimentações</button>
          <ul class="dropdown-menu">
            <li><a href="/movimentacoes" class="dropdown-link">Todas as Movimentações</a></li>
          </ul>
        </li>

        <!-- Financeiro -->
        <li class="nav-item dropdown">
          <button type="button" class="dropdown-toggle">Financeiro</button>
          <ul class="dropdown-menu">
            <li><a href="/fluxo-caixa" class="dropdown-link">Fluxo de Caixa</a></li>
            <li><a href="/contas-a-receber" class="dropdown-link">Contas a Receber</a></li>
            <li><a href="/contas-a-pagar" class="dropdown-link">Contas a Pagar</a></li>
            <li><a href="/inadimplencia" class="dropdown-link">Inadimplência</a></li>
            <li><a href="/dre" class="dropdown-link">DRE</a></li>
          </ul>
        </li>

        <!-- Gerenciar -->
        <li class="nav-item dropdown">
          <button type="button" class="dropdown-toggle">Gerenciar</button>
          <ul class="dropdown-menu">
            <li><a href="/produtos" class="dropdown-link">Produtos</a></li>
            <li><a href="/usuarios" class="dropdown-link">Usuários</a></li>
            <li><a href="/clientes" class="dropdown-link">Clientes</a></li>
            <li><a href="/fornecedores" class="dropdown-link">Fornecedores</a></li>
            <li><a href="/rcas" class="dropdown-link">RCAs</a></li>
          </ul>
        </li>

        <!-- Backup -->
        <li class="nav-item">
          <a href="/backup" class="nav-link">Backup</a>
        </li>
      </ul>
    </nav>

    <!-- Informações do usuário e logout -->
    <div class="user-info">
      <span class="user-name"><%= user.nomeCompleto || user.username %></span>
      <form action="/logout" method="get" class="logout-form">
        <button type="submit" class="btn-logout">Sair</button>
      </form>
    </div>
    <% } %>
  </div>
</header>